<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 2.5//DTD template 1.0//EN" "http://www.joomla.org/xml/dtd/2.5/template-install.dtd">
<extension version="3.4" type="template" client="site" method="upgrade">
	<name>Polartemplate</name>
	<version>1.0</version>
	<creationDate>2013-02-12</creationDate>
	<author>Odd Gunnar Malin</author>
	<authorEmail>oddg@sjakk.biz</authorEmail>
	<authorUrl>http://polarchess.net</authorUrl>
	<copyright>Copyright (C) 2015</copyright>
	<description>TPL_POLARTEMPLATE_XML_DESCRIPTION</description>
	<files>
		<filename>component.php</filename>
		<filename>index.php</filename>
		<filename>templateDetails.xml</filename>
		<folder>css</folder>
		<folder>fonts</folder>
		<folder>html</folder>
		<folder>language</folder>
		<folder>less</folder>
	</files>
	<positions>
		<position>banner</position>
		<position>debug</position>
		<position>search</position>
		<position>navigation</position>
		<position>breadcrumb</position>
		<position>left</position>
		<position>right</position>
		<position>top</position>
		<position>above</position>
		<position>below</position>
		<position>bottom</position>
		<position>footer</position>
	</positions>
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.tpl_polartemplate.ini</language>
		<language tag="en-GB">en-GB/en-GB.tpl_polartemplate.sys.ini</language>
		<language tag="nb-NO">nb-NO/nb-NO.tpl_polartemplate.ini</language>
		<language tag="nb-NO">nb-NO/nb-NO.tpl_polartemplate.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="advanced">
				<field name="datebanner"
					type="radio"
					class="btn-group btn-group-yesno"
					default="1"
					label="TPL_POLARTEMPLATE_DATEBANNER_LABEL"
					description="TPL_POLARTEMPLATE_DATEBANNER_DESC"
				>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field name="menulogin"
					type="radio"
					class="btn-group btn-group-yesno"
					default="1"
					label="TPL_POLARTEMPLATE_MENULOGIN_LABEL"
					description="TPL_POLARTEMPLATE_MENULOGIN_DESC"
				>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field name="menusite"
					type="radio"
					class="btn-group btn-group-yesno"
					default="1"
					label="TPL_POLARTEMPLATE_MENUSITE_LABEL"
					description="TPL_POLARTEMPLATE_MENUSITE_DESC"
				>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field name="leftsize" type="integer" default="3"
					label="TPL_POLARTEMPLATE_LEFTSIZE_LABEL"
					description="TPL_POLARTEMPLATE_LEFTSIZE_DESC"
					first="0" last="12" step="1" />
				<field name="rightsize" type="integer" default="3"
					label="TPL_POLARTEMPLATE_RIGHTSIZE_LABEL"
					description="TPL_POLARTEMPLATE_RIGHTSIZE_DESC"
					first="0" last="12" step="1" />
			</fieldset>
		</fields>
	</config>
</extension>
